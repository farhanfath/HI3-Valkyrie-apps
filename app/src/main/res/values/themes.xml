<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/darker</item>
        <item name="colorPrimaryDark">@color/darker</item>
        <item name="colorAccent">@color/darker</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="fontFamily">Microsoft YaHei</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darker</item>
        <item name="colorPrimaryDark">@color/darker</item>
        <item name="colorAccent">@color/darker</item>
    </style>

</resources>